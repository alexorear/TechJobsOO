@model TechJobs.ViewModels.NewJobViewModel

<div asp-validation-summary="All"></div>

<form asp-controller="Job" asp-action="New" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" value="@Model.Name"/>
    </div>
    <div class="form-group">
        <label asp-for="EmployerID"></label>
        <select asp-for="EmployerID" asp-items="Model.Employers" value="@Model.EmployerID"></select>
    </div>

    @{ 
        // TODO #5 - Create <select> dropdowns for other job fields (outside of this @{ } block)
    }
    <div class="form-group">
        <label asp-for="LocationID"></label>
        <select asp-for="LocationID" asp-items="@Model.Locations" value="@Model.LocationID"></select>
    </div>
    <div class="form-group">
        <label asp-for="CoreCompetencyID"></label>
        <select asp-for="CoreCompetencyID" asp-items="@Model.CoreCompetencies" value="@Model.CoreCompetencyID"></select>
    </div>
    <div class="form-group">
        <label asp-for="PositionTypeID"></label>
        <select asp-for="PositionTypeID" asp-items="@Model.PositionTypes" value="@Model.PositionTypeID"></select>
    </div>
    
    <input type="submit" value="Add Job" />
</form>
